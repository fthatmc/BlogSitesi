@using BlogSitesi.Model.Entity
@model List<TblSocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}


<br />
<h2>Sosyal Medya Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>Sıra No</th>
        <th>Başlık</th>
        <th>URL</th>
        <th>İcon</th>
        <th>İşlem</th>

    </tr>
    @{int sirano = 0;}
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sirano++;} @sirano</td>
            <td>@x.Title</td>
            <td>@x.SocialMediaUrl</td>
            <td>@x.Icon</td>

            <td>
                <a style="width:100px;" class="btn btn-info btn-sm" href="/SocialMedia/EditSocialMedia/@x.SocialMediaID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                <a class="btn btn-danger btn-sm" href="/SocialMedia/DeleteSocialMedia/@x.SocialMediaID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>

            </td>
        </tr>
    }
</table>

<a href="/SocialMedia/AddSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>






