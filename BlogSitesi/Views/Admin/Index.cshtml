@using BlogSitesi.Model.Entity
@model List<TblAdmin>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}


<br />
<h2>Admin Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>Sıra No</th>
        <th>Ad Soyad</th>
        <th>Şifre</th>
        <th>İşlem</th>

    </tr>
    @{int sirano = 0;}
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sirano++;} @sirano</td>
            <td>@x.UserName</td>
            <td>@x.Password</td>
            <td>
                <a style="width:100px;" class="btn btn-info btn-sm" href="/Admin/EditAdmin/@x.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                <a class="btn btn-danger btn-sm" href="/Admin/DeleteAdmin/@x.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>

            </td>
        </tr>
    }
</table>

<a href="/Admin/AddAdmin/" class="btn btn-primary">Yeni Admin Ekle</a>










