@model BlogSitesi.Model.Entity.TblAdmin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/View.cshtml";
}

<h2>Admin Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>


