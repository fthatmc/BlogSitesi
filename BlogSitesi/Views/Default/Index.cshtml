@using BlogSitesi.Model.Entity
@model List<TblFuture>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Meyawo landing page.">
    <meta name="author" content="Devcrud">
    <title>Portfolio Proje</title>
    <!-- font icons -->
    <link rel="stylesheet" href="~/meyawo-1.0.0/assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + Meyawo main styles -->
    <link rel="stylesheet" href="~/meyawo-1.0.0/assets/css/meyawo.css">
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <!-- Page Navbar -->
    <nav class="custom-navbar" data-spy="affix" data-offset-top="20">
        <div class="container">
            <a class="logo" href="#">Atmaca</a>
            <ul class="nav">
                <li class="item">
                    <a class="link" href="#home">Ana Sayfa</a>
                </li>
                <li class="item">
                    <a class="link" href="#about">Hakkımda</a>
                </li>
                <li class="item">
                    <a class="link" href="#service">Servisler</a>
                </li>
                <li class="item">
                    <a class="link" href="#portfolio">Projeler</a>
                </li>
                <li class="item">
                    <a class="link" href="#testmonial">Görüşler</a>
                </li>
                
                <li class="item ml-md-3">
                    <a href="#contact" class="btn btn-primary">İletişim</a>
                </li>
            </ul>
            <a href="javascript:void(0)" id="nav-toggle" class="hamburger hamburger--elastic">
                <div class="hamburger-box">
                    <div class="hamburger-inner"></div>
                </div>
            </a>
        </div>
    </nav><!-- End of Page Navbar -->
    <!-- page header -->
    <header id="home" class="header">
        <div class="overlay"></div>
        @foreach (var x in Model)
        {
            <div class="header-content container">
                <h1 class="header-title">
                    <span class="up">@x.Header</span>
                    <span class="down">@x.NameSurname</span>
                </h1>
                <p class="header-subtitle">@x.Title</p>

                <button class="btn btn-primary">Ziyaret Edin</button>
            </div>
        }

    </header><!-- tblfuture -->
    <!-- about section -->
    <section class="section pt-0" id="about">
        @Html.Action("About")
    </section> <!-- TBLABOUT -->
    <!-- service section -->
    <section class="section" id="service">
        @Html.Action("Service")
    </section><!-- tblservice -->

    <section class="section" id="portfolio">
        @Html.Action("Project")
    </section> <!-- tblproject -->
    
    
    <section class="section" id="testmonial">
        @Html.Action("Testimonial")
    </section> <!-- TBLTESTİMONİAL -->
 
    <!-- contact section -->
    <section class="section" id="contact">
        @Html.Action("Contact")
    </section><!-- TBLCONTACT -->
    <!-- footer -->
    <div class="container">
        <footer class="footer">
            <p class="mb-0">
                Copyright
                <script>document.write(new Date().getFullYear())</script> &copy; <a href="http://www.devcrud.com">DevCRUD</a> Distribution <a href="https://themewagon.com">ThemeWagon</a>
            </p>
            @Html.Action("SocialMedia")
        </footer>  <!-- TBL SOCİALMEDİA -->
    </div> <!-- end of page footer -->
    <!-- core  -->
    <script src="~/meyawo-1.0.0/assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="~/meyawo-1.0.0/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

    <!-- bootstrap 3 affix -->
    <script src="~/meyawo-1.0.0/assets/vendors/bootstrap/bootstrap.affix.js"></script>

    <!-- Meyawo js -->
    <script src="~/meyawo-1.0.0/assets/js/meyawo.js"></script>

</body>

</html>
